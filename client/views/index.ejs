<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Chat bot</title>
    <link rel="stylesheet" type="text/css" href="css/freaking-custom.css">
    <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="css/style.css">
    <link rel="stylesheet" type="text/css" href="css/animate.css">
    <style>
    </style>
</head>

<body>
    <div class="chat-window">
        <div class="upper-div text-center">
            <div class="gif-box">
                <img src="images/UnripeAdored.gif" />
            </div>
            <img src="images/close-icon.png" class="close-btn" />
        </div>
        <div class=chat-outer-wrapper>
            <div class=chat-wrapper>
                <div class="chats-content">
                    <!-- <div > -->
                    <div id="loader" class="row">
                        <div class="typing-gif-box"
                            style="background: #f5f5f5; margin: 10px; width:auto; padding:10px; position: absolute; bottom: 50px">
                            <div class="">
                                <img src="images/typing-gif.gif" />
                            </div>
                        </div>
                        <!-- </div> -->
                    </div>
                </div>
            </div>
        </div>
        <div class="reply-box">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xs-11 p-none p-l-md">
                        <div class="reply-input-box">
                            <input id="myInput" type="text" class="rply-input" placeholder="reply" />
                            <div class="voice-box">
                                <button id="mic" class="fa fa-microphone send-btn"></button>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-1 text-center p-none">
                        <button class="send-btn" type="submit"
                            onclick="send(document.getElementById('myInput').value);">
                            <i class="fa fa-paper-plane-o"></i>
                        </button>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>

    <script src="js/jquery-2.1.3.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script type='text/javascript' src='js/wow.js'></script>
    <script type='text/javascript' src="js/main.js"></script>
    <script type='text/javascript' src="js/index.js"></script>
</body>

</html>